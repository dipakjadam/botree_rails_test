<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Cleaner</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer.full_name %></td>
        <td><%= booking.cleaner.full_name %></td>
        <td><%= booking.date %></td>
        <td><%= link_to 'Show', customer_booking_path(@customer, booking) %></td>
        <td><%= link_to 'Edit', edit_customer_booking_path(@customer, booking) %></td>
        <td><%= link_to 'Destroy', customer_booking_path(@customer, booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_customer_booking_path(@customer) %>
